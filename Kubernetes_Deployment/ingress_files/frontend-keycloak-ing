apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: faraz-test-frontend-ingress
  namespace: faraz-dev-evwer
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$1
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
    nginx.ingress.kubernetes.io/proxy-read-timeout: "3600s"
spec:
  ingressClassName: nginx
  rules:
    - host: "farazaks.southeastasia.cloudapp.azure.com"
      http:
        paths:
        - path: /(.*)
          pathType: Prefix
          backend:
            service:
              name: f-frontend-service
              port:
                number: 80
        - path: /keycloak(.*)
          pathType: Prefix
          backend:
            service:
              name: f-keycloak-service
              port:
                number: 80
